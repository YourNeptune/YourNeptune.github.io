<div class="">
  <div class="text-center">
    <h1><%= config.title %></h1>
    <p><%= config.subtitle %></p>
  </div>
  <div class="myPostsContainer">
    <ul class="list-unstyled">
      <% page.posts.each(function(post){ %>
      <li>
        <h3>
          <a href="<%- url_for(post.path) %>"> <%= post.title %> </a>
        </h3>
        <div class="text-muted"><%= date(post.date, config.date_format) %></div>
        <% if(post.categories) { %> <%- list_categories(post.categories, {
        style: false, separator: ' | ', transform(str) { return str; } }) %> <%
        } %> <% if(post.excerpt) { %>
        <p><%- post.excerpt %></p>
        <% } %>
      </li>
      <% }) %>
    </ul>
  </div>

  <!-- Pagination -->
  <%- partial("_partial/pagination") %>
</div>
